        <DataGrid x:Name="datagrid1_Copy3" HorizontalAlignment="Left" Margin="920,66,0,0" VerticalAlignment="Top" Height="200" Width="450" ItemsSource="{Binding}"/>
        <DataGrid x:Name="datagrid1_Copy4" HorizontalAlignment="Left" Margin="920,271,0,0" VerticalAlignment="Top" Height="200" Width="450" ItemsSource="{Binding}"/>
        <DataGrid x:Name="datagrid1_Copy5" HorizontalAlignment="Left" Margin="10,476,0,0" VerticalAlignment="Top" Height="200" Width="450" ItemsSource="{Binding}"/>
        <DataGrid x:Name="datagrid1_Copy6" HorizontalAlignment="Left" Margin="465,476,0,0" VerticalAlignment="Top" Height="200" Width="450" ItemsSource="{Binding}"/>
        <Button x:Name="Check_Copy" Content="Open Merit Assembly Window" Width="200" VerticalAlignment="Top" Margin="1099,10,140,0" Click="Check_Copy_Click"/>
    </Grid>
</Controls:MetroWindow>